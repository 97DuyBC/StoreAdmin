
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header>
    <title>Đơn hàng</title>
    <script src="~/Scripts/jquery.tmpl.js"></script>
    <script src="/Scripts/Order/Index.js"></script>
</header>
<body>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Danh sách đơn hàng</h4>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name customer</th>
                                <th>Order date</th>
                                <th>Order number</th>
                                <th>Total amount</th>
                                <!--Title bảng-->
                            </tr>
                        </thead>
                        <tbody id="TableContent">
                            <!--up noi dung bang-->
                        </tbody>
                        <script type="text/html" id="Template">
                            <tr>
                                <td>${OrderSMR.Id}</td>
                                <td>${CustomerSMR.FirstName} ${CustomerSMR.LastName}</td>
                                <td>${FormatDate(OrderSMR.OrderDate)}</td> <!--Su dung ham FormatDate(dt) trong file JS// ten ko the la: formatDate()// co the do trung ham da dc dinh nghia-->
                                <td>${OrderSMR.OrderNumber}</td>
                                <td>${OrderSMR.TotalAmount}</td>
                            </tr>
                            <!--Nôi dung bảng-->
                        </script>
                    </table>
                    <div>
                        <div class="col-md-12 col-sm-12 text-center">
                            <a href="javascript:void(0);" id="aPrevious" style="display: inline; font-size:large" class="previous-page">
                                <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
                            </a>
                            <a href="javascript:void(0);" class="span-paging" style="font-size:large">
                                <span class="span-paging">
                                    Trang
                                    <span id="spanPageInfo" />
                                </span>
                            </a>
                            <a href="javascript:void(0);" id="aNext" style="display: inline; font-size:large" class="next-page">
                                <i class="fa fa-arrow-circle-right" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    <div id="no-data" class="row" style="display: none">
        <div class="col-lg-12">
            <h3 class="page-header">Không có dữ liệu</h3>
        </div>
        <!--  -->
    </div>
        <!-- /.panel -->
</body>



