
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <title>Đơn hàng</title>
    <script src="~/Scripts/jquery.tmpl.js"></script>
    <script src="/Scripts/Order/Index.js"></script>
</header>
<body>
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Danh sách khách hàng</h4>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead id="TableTitle">
                            <tr>
                                <th>ID</th>
                                <th>Name customer</th>
                                <th>Order date</th>
                                <th>Order number</th>
                                <th>Total amount</th>
                                <!--Title bảng-->
                            </tr>
                        </thead>
                        <script type="text/html" id="Content">
                            <tr>
                                <td>${OrderSMR.Id}</td>
                                <td>${CustomerSMR.FirstName} ${CustomerSMR.LastName}</td>
                                <td>${OrderSMR.OrderDate}</td> <!--Su dung ham formatDate(dt) trong file JS-->
                                <td>${OrderSMR.OrderNumber}</td>
                                <td>${OrderSMR.TotalAmount}</td>
                            </tr>
                            <!--Nôi dung bảng-->
                        </script>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</body>

