@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <title>QL khách hàng</title>
    <script src="~/Scripts/jquery.tmpl.js"></script>
    <script src="/Scripts/Order/Add.js"></script>
</head>
<body>
    <h2>Tạo đơn hàng</h2>
    <!--Chon khách hàng-->
    <div class="col-lg-6">
        <div>
        <h4>
            <input id="btnSeach" type="button" class="btn btn-success" value="Chọn khách hàng" style="font-size:15px"></input>
            <a href="/Customer/Add" id="btnCreate"><input type="button" class="btn btn-success" value="Thêm mới" style="font-size:15px"></input></a>
        </div><br />
        <div id="tableSeach" style="display:none">
            <!--txtSeach-->
            <div class="input-group custom-search-form">
                <input type="text" id="seachName" class="form-control" placeholder="Tìm kiếm khách hàng...">
                <span class="input-group-btn">
                    <button id="seach" class="btn btn-default" type="button" style="width: 43px">
                        <i class="fa fa-search"></i>
                    </button><br />
                </span>
            </div>
            <!--Table content-->
            <div class="table-responsive" style="display: none" >
                <!--titleTable-->
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Full Name</th>
                            <th>Phone</th>
                            <th>
                                <button class="btn-social" style="width: 25px;height:25px">
                                    <i class="fa fa-check"></i>
                                </button>
                            </th><!--Title bảng-->
                        </tr>
                    <tbody>
                        <tr>
                            <td>a</td>
                            <td>a</td>
                            <td>a</td>
                            <td>
                                <button class="btn-social" style="width: 25px;height:25px" itemid="ID">
                                    <i class="fa fa-check"></i>
                                </button>
                            </td>
                            <!--Title bảng-->
                        </tr>
                    </tbody>
                    <tbody id="TableContent">
                        <!--noi dung bang-->
                    </tbody>
                    </thead>
                </table>
                <!--page Index-->
                <div>
                    <div class="col-md-12 col-sm-12 text-center" style="background-color:lightskyblue">
                        <a href="javascript:void(0);" id="aPrevious" style="display: inline; font-size:large" class="previous-page">
                            <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
                        </a>
                        <a href="javascript:void(0);" class="span-paging" style="font-size:large">
                            <span class="span-paging">
                                Trang
                                <span id="spanPageInfo" />
                            </span>
                        </a>
                        <a href="javascript:void(0);" id="aNext" style="display: inline; font-size:large" class="next-page">
                            <i class="fa fa-arrow-circle-right" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
                <!--script-->
                <script type="text/html" id="Template">
                    <tr>
                        <td>${CustomerSMR.Id}</td>
                        <td>${CustomerSMR.FirstName} ${CustomerSMR.LastName}</td>
                        <td>${CustomerSMR.Phone}</td>
                        <td style="width: 43px;">
                            <button class="btn-social" style="width: 25px;height:25px">
                                <i class="fa fa-check"></i>
                            </button>
                        </td>
                    </tr>
                    <!--Nôi dung bảng-->
                </script>
                <script type="text/html" id="Templace1">
                    <tr>
                        <td>${ProductSMR.Id}</td>
                        <td>${ProductSMR.ProductName}</td>
                        <td>${ProductSMR.UnitPrice}</td>
                        <td>${ProductSMR.Package}</td>
                        <td>${SupplierSMR.CompanyName}</td>
                    </tr>
                    <!--Nôi dung bảng-->
                </script>
            </div>
            <!--Hien thi khi ko co du lieu tu sever-->
        </div>
        <div id="no-data" class="row" style="display: none">
            <div class="col-lg-12">
                <h3 class="page-header">Không có dữ liệu</h3>
            </div>
            <!--  -->
        </div>
    </div>
    <div class="col-lg-6">
        <h4>Thông tin đơn hàng</h4>
        <div id="customerInfo"></div>
    </div>
</body>
