
@{
    ViewBag.Title = "Seach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>QL khách hàng</title>
    <script src="~/Scripts/jquery.tmpl.js"></script>
    <script src="/Scripts/Customer/seachCustomer.js"></script>
</head>
<body>
    <div>
        <label>Tìm kiếm theo tên</label>
        <div class="input-group custom-search-form" style="width: 30%">
            <span class="input-group-btn">
                <input type="text" id="seachName" class="form-control" placeholder="Search...">
                <button id="seach" class="btn btn-default" type="button">
                    <i class="fa fa-search"></i>
                </button>
            </span>
        </div>
        <div class="panel panel-default" id="TableContent" class="col-md-12 col-sm-12 text-center" style="display: none">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Full Name</th>
                            <th>City</th>
                            <th>Country</th>
                            <th>Phone</th>
                            <!--Title bảng-->
                        </tr>
                    <tbody id="Content">
                        <!--up noi dung bang-->
                    </tbody>
                    </thead>
                </table>
                <script type="text/html" id="Template">
                    <tr>
                        <td>${CustomerSMR.Id}</td>
                        <td>${CustomerSMR.FirstName} ${CustomerSMR.LastName}</td>
                        <td>${CustomerSMR.City}</td>
                        <td>${CustomerSMR.Country}</td>
                        <td>${CustomerSMR.Phone}</td>
                    </tr>
                    <!--Nôi dung bảng-->
                </script>
                <div style="text-align: center; background-color:lightskyblue">
                    <a href="javascript:void(0);" id="aPrevious" style="display: none; font-size:large" class="previous-page">
                        <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
                    </a>
                    <a href="javascript:void(0);" class="span-paging" style="font-size:large">
                        <span class="span-paging">
                            Trang
                            <span id="spanPageInfo" />
                        </span>
                    </a>
                    <a href="javascript:void(0);" id="aNext" style="display: none; font-size:large" class="next-page">
                        <i class="fa fa-arrow-circle-right" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!---body -->
    </div>
    <!--Hien thi khi ko co du lieu tu sever-->
    <div id="no-data" class="row" style="display: none ">
        <div class="col-lg-12">
            <h3 class="page-header">Không có dữ liệu</h3>
        </div>
        <!--  -->
    </div>
</body>

