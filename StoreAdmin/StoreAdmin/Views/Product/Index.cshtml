
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header>
    <title>Đơn hàng</title>
    <script src="~/Scripts/jquery.tmpl.js"></script>
    <script src="~/Scripts/Product/Index.js"></script>
</header>
<body>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>Danh sách khách hàng</h4>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead id="TableTitle">
                        <tr>
                            <th>ID</th>
                            <th>Name product</th>
                            <th>Unit Price</th>
                            <th>Package</th>
                            <th>Is Discontinued</th>
                            <th>Company Name</th>
                            <th>Supplier City/Country</th>
                            <!--Title bảng-->
                        </tr>
                        <tbody id="TableContent">
                            <!--up noi dung bang-->
                        </tbody>
                    </thead>
                    <script type="text/html" id="Template">
                        <tr>
                            <td>${ProductSMR.Id}</td>
                            <td>${ProductSMR.ProductName}</td>
                            <td>${ProductSMR.UnitPrice}</td>
                            <td>${ProductSMR.Package}</td>
                            <td>${ProductSMR.IsDiscontinued}</td>
                            <td>${SupplierSMR.CompanyName}</td>
                            <td>${SupplierSMR.City}/${SupplierSMR.Country}</td>
                        </tr>
                        <!--Nôi dung bảng-->
                    </script>
                </table>
                <div>
                    <div class="col-md-12 col-sm-12 text-center">
                        <a href="javascript:void(0);" id="aPrevious" style="display: inline; font-size:large" class="previous-page">
                            <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
                        </a>
                        <a href="javascript:void(0);" class="span-paging" style="font-size:large">
                            <span class="span-paging">
                                Trang
                                <span id="spanPageInfo" />
                            </span>
                        </a>
                        <a href="javascript:void(0);" id="aNext" style="display: inline; font-size:large" class="next-page">
                            <i class="fa fa-arrow-circle-right" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
    <!--Hien thi khi ko co du lieu tu sever-->
    <div id="no-data" class="row" style="display: none">
        <div class="col-lg-12">
            <h3 class="page-header">Không có dữ liệu</h3>
        </div>
        <!--  -->
    </div>
</body>



